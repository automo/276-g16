<% provide(:title, @user.username) %>
<div class="mobileview">

<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Welcome,   <%= @user.username %> </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
<div class="row">
  <div class="col-lg-3 col-md-6">
                      <div class="panel panel-yellow">
                          <div class="panel-heading">
                              <div class="row">
                                  <div class="col-xs-3">
                                      <h1 class="glyphicon glyphicon-th-list"></h1>
                                  </div>
                                  <div class="col-xs-9 text-right">

                                      <div class="huge">My Shopping list</div>
                                  </div>
                              </div>
                          </div>
                          <%= link_to order_requests_path(@order_request), :class => 'panel-footer' do%>
                          <!-- <a href="/order_requests">
                              <div class="panel-footer"> -->
                                  <span class="pull-left medi">Create New</span>
                                  <span class="pull-right"><h3 class="glyphicon glyphicon-plus"></h3></span>
                                  <div class="clearfix"></div>
                              <!-- </div> -->
                          <!-- </a> -->
                          <% end %>
                      </div>
  </div>
  <div class="col-lg-3 col-md-6">
                      <div class="panel panel-green">
                          <div class="panel-heading">
                              <div class="row">
                                  <div class="col-xs-3">
                                      <h1 class="glyphicon glyphicon-shopping-cart"></h1>
                                  </div>
                                  <div class="col-xs-9 text-right">

                                      <div class ="huge">My Orders</div>
                                  </div>
                              </div>
                          </div>
                          <a href="#">
                              <div class="panel-footer">
                                  <span class="pull-left medi">View My Orders</span>
                                  <span class="pull-right"><h3 class="glyphicon glyphicon-check"></h3></span>
                                  <div class="clearfix"></div>
                              </div>
                          </a>
                      </div>
  </div>
  <div class="col-lg-3 col-md-6">
                      <div class="panel panel-red">
                          <div class="panel-heading">
                              <div class="row">
                                  <div class="col-xs-3">
                                      <h1 class="glyphicon glyphicon-cloud"></h1>
                                  </div>
                                  <div class="col-xs-9 text-right">

                                      <div class="huge">Open Order</div>

                                  </div>
                              </div>
                          </div>
                          <a href="#">
                              <div class="panel-footer">
                                  <span class="pull-leftmed medi">View Open Orders</span>
                                  <span class="pull-right"><h3 class="glyphicon glyphicon-eye-open"></h3></span>
                                  <div class="clearfix"></div>
                              </div>
                          </a>
                      </div>
  </div>
  <div class="col-lg-3 col-md-6">
                      <div class="panel panel-primary">
                          <div class="panel-heading">
                              <div class="row">
                                  <div class="col-xs-3">
                                      <h1 class="glyphicon glyphicon-user"></h1>
                                  </div>
                                  <div class="col-xs-9 text-right">

                                      <div class="huge">My Profile</div>
                                  </div>
                              </div>
                          </div>
                          <a href="#">
                              <div class="panel-footer">
                                  <span class="pull-left medi">Edit Profile</span>
                                  <span class="pull-right"><h3 class="glyphicon glyphicon-edit"></h3></span>
                                  <div class="clearfix"></div>
                              </div>
                          </a>
                      </div>
  </div>
</div>





  <aside class="col-md-4">
    <section class="user_info">

      <h1> Welcome,
        <%= @user.username %>
      </h1>

      <h1>This is the sample page for the user interface</h1>
      <h2>User Information</h2>


      <ul>
        <li> Username: <%= @user.username %> </li>
        <li> Email : <%= @user.email %> </li>
        <li>  First Name: <%= @user.first_name %> </li>
        <li>  Last Name: <%= @user.last_name %> </li>
        <li>  Birthdate: <%= @user.birthdate %> </li>
        <li>  Address: <%= @user.address %> </li>
        <li>  Password: <%= @user.password_digest %> </li>
        <li>  Rating: <%= @user.rating %> </li>


      </ul>



    </section>
  </aside>
</div>


</div>
