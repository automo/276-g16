<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<p>This will be a signup page for new users.</p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages' %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, :required => true, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address,  :required => true, class: 'form-control' %>

      <%= f.label :birthdate %>
      <%= f.date_select :birthdate,  :required => true ,class: 'form-control'%>


      <%= f.label :email %>
      <%= f.email_field :email, :required => true , class: 'form-control' %>

      <%= f.label :username %>
      <%= f.text_field :username, :required => true, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, :required => true ,class: 'form-control' %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, :required => true, class: 'form-control' %>

      <%= f.label :is_mod, "Moderator?" %>
      <%= f.radio_button :is_mod, 'true', :checked => true %>
      <%= label :mod_yes, 'YES' %>
      <%= f.radio_button :is_mod, 'false' %>
      <%= label :mod_no, 'NO' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>




    <% end %>
  </div>
</div>
