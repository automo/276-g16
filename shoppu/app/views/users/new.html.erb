<% provide(:title, 'Sign up') %>
<h3>You're just one step away!</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create Your Account:</h1>
    <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages' %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name ,required: true, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, :required => true, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address,  :required => true, class: 'form-control' %>

      <%= f.label :birthdate %>
      <div>
        <%= f.date_select :birthdate, :start_year => 1910, :end_year => 2015, order: [:month, :day, :year] ,:required => true , class:'form-control'%>
      </div>


      <%= f.label :email %>
      <%= f.email_field :email, :required => true , class: 'form-control' %>

      <%= f.label :username %>
      <%= f.text_field :username, :required => true, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, :required => true ,class: 'form-control' %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, :required => true, class: 'form-control' %>

      <!-- <%= f.label :is_moderator, "Moderator?" %>
      <%= f.radio_button :is_moderator, 'true', :checked => true %>
      <%= label :mod_yes, 'YES' %>
      <%= f.radio_button :is_moderator, 'false' %>
      <%= label :mod_no, 'NO' %> -->

      <%= f.submit "Create my account", class: "btn btn-primary btn-fullsize" %>




    <% end %>
  </div>
</div>
